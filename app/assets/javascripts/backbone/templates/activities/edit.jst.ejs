<h1>Edit activity</h1>

<form id="edit-activity" name="activity">
  <div class="field">
    <label for="title"> title:</label>
    <input type="text" name="title" id="title" value=<%= title %> >
  </div>

  <div class="field">
    <label for="comment"> comment:</label>
    <input type="text" name="comment" id="comment" value=<%= comment %> >
  </div>

  <div class="field">
    <label for="estimate"> estimate:</label>
    <input type="text" name="estimate" id="estimate" value=<%= estimate %> >
  </div>

  <div class="field">
    <label for="day_list_id"> day_list_id:</label>
    <input type="text" name="day_list_id" id="day_list_id" value=<%= day_list_id %> >
  </div>

  <div class="actions">
    <input type="submit" value="Update Activity" />
  </div>

</form>

